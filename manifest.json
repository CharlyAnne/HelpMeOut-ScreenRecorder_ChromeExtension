{
  "name": "Help Me Out",
  "version": "1.0.0",
  "description": "Chrome Extension - Screen Recorder",
  "manifest_version": 3,
  "author": "CharlyAnne",
  "icons": {
    "logo": "/src/assets/logo.png"
  },
  "action": {
    "default_popup": "Popup.jsx"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [],
      "js": []
    }
  ],
  "host_permissions": ["https://*/", "http://*/"],
  "permissions": ["tabs", "activeTab", "desktopCapture"]
}
